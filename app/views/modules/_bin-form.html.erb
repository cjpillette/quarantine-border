	<%= simple_form_for @bin_collection do |f|%>

				
	
				<%= f.input :collection_date, as: :string, input_html: {class: "datepicker", value: Time.now.strftime('%d-%m-%Y')} %>
			
				<%= f.input :weight, label:"Weight in Kg" %> 

				<%= f.input :inspected_for_brm, label:"BRM chopped?" %>
			
				<%= f.input :mqei_submitted, label:"MQEI submitted?" %>
			
				<%= f.button :submit, "Save" %>

		<% end %>