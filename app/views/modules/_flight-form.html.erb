	<%= simple_form_for @flight do |f|%>

				
				<%= f.collection_radio_buttons(:airport_id, Airport.all, :id, :name) %> 
	
				<%= f.input :date, as: :string, input_html: {class: "datepicker", value: Time.now.strftime('%d-%m-%Y')} %>

				<%= f.input :plane, label:"Flight Number" %>
			
				<%= f.collection_radio_buttons(:inspectionregime_id, Inspectionregime.all, :id, :name) %> 

				<%= f.input :total_pax, label:"Number of passengers" %>
			
				<%= f.input :total_nc_pax, label:"Number of non-compliant pax" %>
		
				Start Inspection at:<%= f.time_select :start_time, :value => Time.now %> <br>
			
				Finish Inspection at:<%= f.time_select :finish_time, :value => Time.now %> <br>
			
				<%= f.button :submit, "Save" %>

		<% end %>

