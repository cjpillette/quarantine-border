<p id="notice"><%= notice %></p>

<h1>Bin Collection</h1>
<%= button_to 'New bin service', new_brmcollection_path, method: :get, class: 'btn btn-default' %>
<%= button_to 'Back', root_path, class: 'btn btn-default' %>

<div class="wrapper">
  <table class="table table-striped table-bordered">
   
  <thead>
    <tr>
      <th>Airport</th>
      <th>Bin Collected on</th>
      <th>Bin Type</th>
      <th>Weight</th>
      <th>Chopped and inspected?</th>
      <th>MQEI submitted?</th>
    </tr>
  </thead>

  <tbody>
    <% @brmcollections.each do |brmcollection| %>
      <tr>
        <td><%= brmcollection.airport.name%></td>
        <td><%= link_to brmcollection.collectedon.to_formatted_s(:long), edit_brmcollection_path(brmcollection) %></td>
        <td><%= brmcollection.bordergranularity.checkpoint%></td>
        <td><%= brmcollection.weight %></td>
        <td><%= yesno(brmcollection.chopped) %></td>
        <td><%= yesno(brmcollection.mqeisubmitted) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>


