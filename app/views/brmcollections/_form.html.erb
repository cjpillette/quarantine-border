<%= simple_form_for(@brmcollection) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= select_tag(:airport_id, options_for_select(@airports), :prompt => "select airport")%>
    <%= select_tag(:bordergranularity_id, options_for_select(@bordergranularities), :prompt => "select bin type")%>
    <%= f.input :collectedon %>
    <%= f.input :weight %>
    <%= f.input :chopped %>
    <%= f.input :mqeisubmitted %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
